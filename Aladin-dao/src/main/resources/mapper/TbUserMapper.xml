<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.aladin.dao.TbUsersDao">
    <resultMap id="TbUsersMap" type="TbUsers">
        <id column="username" property="username"/>
        <result column="name" property="name"/>
        <result column="password" property="password"/>
    </resultMap>
    <insert id="insert" parameterType="com.aladin.pojo.TbUsers">
        INSERT INTO t_demo (username,
                              name,
                              password)                              )
        VALUES (#{tbUsers.username},#{tbUsers.name},#{passwrod});
    </insert>

    <select id="selectUserInfo" resultMap="TbUsersMap">
        SELECT name,password
        FROM t_demo
        WHERE Name = #{name}
        LIMIT 1;
    </select>

</mapper>








