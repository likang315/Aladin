<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.aladin.dao.product.BrandMapper" >
  <resultMap id="BaseResultMap" type="com.aladin.pojo.product.Brand" >
    <id column="id" property="id" jdbcType="BIGINT" />
    <result column="name" property="name" jdbcType="VARCHAR" />
    <result column="pic" property="pic" jdbcType="VARCHAR" />
    <result column="detail" property="detail" jdbcType="VARCHAR" />
    <result column="brand_id" property="brandId" jdbcType="BIGINT" />
    <result column="c_time" property="cTime" jdbcType="TIMESTAMP" />
    <result column="u_time" property="uTime" jdbcType="TIMESTAMP" />
    <result column="status" property="status" jdbcType="TINYINT" />
  </resultMap>

  <sql id="brandSql">
    id,name,pic,detail,brand_id,c_time,u_time,status
  </sql>

  <!--按商品品牌id查找商品品牌信息-->
  <select id="findBrandById" parameterType="Long" resultMap="BaseResultMap">
    select
    <include refid="brandSql"/>
    from m_brand
    where brand_id = #{brandId}
  </select>
</mapper>